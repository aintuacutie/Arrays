#include <iostream>
using namespace std;
int main() {
    const int arraySize = 10;
    int numbers[arraySize];


    cout << "Please Enter 10 numbers: ";
    for (int i = 0; i < arraySize; ++i) {
        cin >> numbers[i];
    }


    cout << "Even numbers are located at index value: ";
    for (int i = 0; i < arraySize; ++i) {
        if (numbers[i] % 2 == 0) {
            cout << i << " ";
        }
    }
